							</row>
							<row>
								<label value="IBAN:" style="font-style: italic; font-size: 12px; font-weight: bold; color: #0E3A99;" />
								<textbox id="txtIBAN" maxlength="24" style="font-weight: bold;" width="220px" constraint="no empty" />
